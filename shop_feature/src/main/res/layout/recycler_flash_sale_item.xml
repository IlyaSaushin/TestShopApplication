<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/auth_edittext_hint_color"
            android:scaleType="centerCrop"
            />

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sale_background"
            android:text="@string/sale_off"
            android:fontFamily="@font/montesserat_medium"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            />

        <TextView
            android:id="@+id/good_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kids"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/good_title"
            app:layout_constraintStart_toStartOf="@id/good_title"
            android:background="@drawable/good_type_text_background"
            android:paddingHorizontal="4dp"
            android:layout_marginBottom="6dp"
            />

        <TextView
            android:id="@+id/good_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:text="@string/new_balance_sneakers"
            android:textColor="@color/white"
            android:fontFamily="@font/montesserat_medium"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/price"
            app:layout_constraintBottom_toTopOf="@id/price"
            android:layout_marginBottom="6dp"
            />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_90_000"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/montesserat_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="@dimen/margin"
            />

        <ImageView
            android:id="@+id/fav_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favorite"
            app:layout_constraintBottom_toBottomOf="@id/add_btn"
            app:layout_constraintTop_toTopOf="@id/add_btn"
            app:layout_constraintEnd_toStartOf="@id/add_btn"
            android:layout_marginEnd="17dp"
            />

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/margin1"
            android:layout_marginEnd="15dp"
            android:scaleX="2"
            android:scaleY="2"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>